{
  "name": "Sexy",
  "version": "1.1.3",
  "images": [
    {
      "variable": "image",
      "label": "Header image",
      "description": "Suggested width of 740 pixels"
    },
    {
      "variable": "background_image",
      "label": "Background Image",
      "description": "Adds a repeating background image"
    }
  ],
  "fonts": [
    {
      "variable": "font",
      "label": "Font",
      "default": "Verdana"
    }
  ],
  "colors": [
    {
      "variable": "background",
      "label": "Background",
      "default": "#cccccc"
    },
    {
      "variable": "text",
      "label": "Text",
      "default": "#666666"
    },
    {
      "variable": "links",
      "label": "Links",
      "default": "#5575dd"
    },
    {
      "variable": "links_rollover",
      "label": "Link rollovers",
      "default": "#0e1b79"
    },
    {
      "variable": "header_background",
      "label": "Header background",
      "default": "#404040"
    },
    {
      "variable": "header_text",
      "label": "Header text",
      "default": "#cde2f0"
    },
    {
      "variable": "sidebar_links",
      "label": "Sidebar links",
      "default": "#5575dd"
    },
    {
      "variable": "sidebar_rollovers",
      "label": "Sidebar link rollovers",
      "default": "#0e1b79"
    },
    {
      "variable": "products_background",
      "label": "Products background",
      "default": "#e4e4e4"
    }
  ],
  "options": [
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "1..100",
      "default": 9,
      "description": "The number of products shown on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 9,
      "description": "The number of products shown at a time on the Products page"
    },
    {
      "variable": "show_inventory_bars",
      "label": "Show inventory bars",
      "type": "boolean",
      "default": false,
      "description": "Shows a product's inventory amounts (when using inventory tracking)",
      "requires": "inventory"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": false,
      "description": "Shows the product search area"
    },
    {
      "variable": "show_newest",
      "label": "Show newest products",
      "type": "boolean",
      "default": false,
      "description": "Shows a list of your newest products"
    },
    {
      "variable": "show_top_selling",
      "label": "Show top selling products",
      "type": "boolean",
      "default": false,
      "description": "Shows a list of your top selling products"
    },
    {
      "variable": "show_products_feed",
      "label": "Show product RSS feed",
      "type": "boolean",
      "default": false,
      "description": "Shows a link to your product RSS feed"
    }
  ],
  "checkout": {
    "optimize_legibility": false,
    "antialias_text": false,
    "wrapper_padding": "16px",
    "header_image": "{{ image }}",
    "background_image": "{{ background_image }}",
    "title_font": "{{ font }}",
    "title_vertical_padding": "5px",
    "title_color": "{{ links }}",
    "title_font_size": "24px",
    "title_font_weight": "normal",
    "title_background_color": "transparent",
    "title_position": "left",
    "body_font": "{{ font }}",
    "body_font_size": "11px",
    "background_color": "{{ background }}",
    "gutter_width": "14px",
    "link_color": "{{ links }}",
    "link_font_size": "11px",
    "link_hover_color": "{{ links_rollover }}",
    "content_color": "{{ text }}",
    "content_header_color": "{{ header_text }}",
    "content_border_width": "0",
    "content_header_font_size": "15px",
    "content_border_color": "transparent",
    "content_header_background_color": "{{ header_background }}",
    "content_border_radius": "0",
    "content_background_color": "#ffffff",
    "content_header_height": "50px",
    "content_width": "740px",
    "content_header_vertical_padding": "25px",
    "content_horizontal_padding": "105px",
    "step_header_font_weight": "700",
    "step_header_color": "{{ text }}",
    "step_inactive_header_color": "opacify({{ text }}, .25)",
    "step_inactive_border_color": "transparent",
    "step_header_text_transform": "none",
    "step_border_width": "5px",
    "step_border_color": "transparent",
    "step_background_color": "#ffffff",
    "step_header_position": "left",
    "step_inactive_background_color": "{{ products_background }}",
    "step_header_font_size": "15px",
    "step_border_style": "solid",
    "step_header_font": "{{ font }}",
    "custom_inputs": true,
    "label_color": "{{ text }}",
    "label_font_weight": "700",
    "label_font_size": "11px",
    "label_text_transform": "none",
    "in_field_labels": true,
    "input_error_background_color": "#ffffff",
    "input_focus_color": "#333333",
    "input_height": "30px",
    "input_background_color": "#ffffff",
    "input_border_width": "1px",
    "input_focus_background_color": "#ffffff",
    "input_horizontal_padding": "8px",
    "input_font_size": "11px",
    "input_border_color": "#eeeeee",
    "input_border_radius": "0",
    "input_focus_border_color": "#cccccc",
    "input_error_border_color": "#CF3636",
    "input_color": "#000000",
    "input_error_color": "#CF3636",
    "button_hover_background_color": "#eeeeee",
    "button_font_weight": "normal",
    "button_color": "#333333",
    "button_hover_color": "#333333",
    "button_position": "left",
    "button_background_color": "#ffffff",
    "button_text_transform": "uppercase",
    "button_border_color": "#eeeeee",
    "button_border_radius": "0",
    "button_hover_border_color": "#cccccc",
    "button_height": "30px",
    "button_font_size": "10px",
    "button_border_width": "1px",
    "summary_font_size": "11px",
    "summary_color": "{{ text }}",
    "summary_inactive_color": "opacify({{ text }}, .25)",
    "summary_secondary_color": "{{ text }}",
    "summary_inactive_secondary_color": "opacify({{ text }}, .25)",
    "summary_item_border_width": "1px",
    "summary_item_border_color": "{{ background }}",
    "summary_inactive_item_border_color": "opacify({{ text }}, .25)",
    "summary_item_list_border_width": "2px",
    "summary_item_list_border_color": "{{ background }}",
    "summary_inactive_item_list_border_color": "opacify({{ text }}, .25)",
    "summary_submit_border_width": "5px",
    "summary_submit_border_color": "{{ background }}",
    "summary_submit_background_color": "#ffffff",
    "error_border_width": "2px",
    "error_font_size": "13px",
    "error_background_color": "#CF3636",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#000000"
  }
}
